<?xml version="1.0" encoding="UTF-8"?>
<extractor>

  <source language="java">

    <directory>${basedir}/src/main/java</directory>

    <methods>
      <method>
        <name>getTranslation</name>
        <singular>1</singular>
      </method>
      <method>
        <name>getTranslationN</name>
        <singular>2</singular>
        <plural>3</plural>
      </method>
      <method>
        <name>sendTranslated</name>
        <singular>1</singular>
      </method>
      <method>
        <name>sendTranslatedN</name>
        <singular>2</singular>
        <plural>3</plural>
      </method>
    </methods>

    <annotations>
      <annotation>
        <name>de.cubeisland.engine.core.command.reflected.Command</name>
        <fields>
          <field>desc</field>
          <field>usage</field>
        </fields>
      </annotation>
    </annotations>

  </source>

  <catalog format="gettext">
    <removeUnusedMessages>true</removeUnusedMessages>
    <createEmptyTemplate>false</createEmptyTemplate>
    <template>${basedir}/src/main/resources/translations/messages.pot</template>
    <header>
      <comments>https://raw.github.com/CubeEngineDev/CubeEngine/master/header.txt</comments>
      <metadata>
        <entry key="Project-Id-Version">${groupId}:${artifactId}:${version}</entry>
        <entry key="Report-Msgid-Bugs-To">development@cubeisland.de</entry>
        <entry key="POT-Creation-Date" variable="true">${date.get('yyyy-MM-dd HH:mm:ssZ')}</entry>
        <entry key="MIME-Version">1.0</entry>
        <entry key="Content-Type">text/plain; charset=${sourceEncoding}</entry>
        <entry key="Content-Transfer-Encoding">8bit</entry>
        <entry key="Language">en_US</entry>
        <entry key="Plural-Forms">nplurals=2; plural=(n != 1);</entry>
      </metadata>
    </header>
  </catalog>

</extractor>